<% provide :title, t("link.link_login") %>
<h1><%= t "link.link_login" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.submit t("link.link_login"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t "text.new_user" %> <%= link_to t("link.link_signup"), signup_path %></p>
  </div>
</div>
