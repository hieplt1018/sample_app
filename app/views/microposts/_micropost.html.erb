<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.max_name), micropost.user %>
  <span class="user"><%= link_to delegate :name, to: :user, micropost.user %></span>
  <span class="content"><%= micropost.content %></span>
  <%= image_tag micropost.picture.url if micropost.picture? %>
  <span class="timestamp">
    <%= t("text.timestamp_post",
      timestamp: time_ago_in_words(micropost.created_at)) %>
    <% if current_user?(micropost.user) %>
      <%= link_to t("link.link_delete"), micropost, method: :delete,
        data: { confirm: t("text.confirm_delete")} %>
    <% end %>
  </span>
</li>
