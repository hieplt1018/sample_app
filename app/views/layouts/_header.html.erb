<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("link.home_title"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("link.link_home"), root_path %></li>
        <li><%= link_to t("link.link_help"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("link.link_users"), "#" %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t("link.link_account") %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("link.link_profile"), current_user %></li>
              <li><%= link_to t("link.link_settings"), "#" %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("link.link_logOut"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("link.link_login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
